		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<!--<site.deployUrl>scp://sammanager.ath.cx/srv/http/samm/site-snapshot</site.deployUrl>-->
	</properties>

	<profiles>
		<profile>
			<id>providers</id>
			<modules>
				<module>../providers/parent</module>
			</modules>
		</profile>
		<profile>
			<id>targetplatform</id>
			<modules>
				<module>../base/parent</module>
			</modules>
		</profile>
		<profile>
			<id>functionaltests</id>
			<modules>
				<module>../test/parent</module>
			</modules>
		</profile>
		<profile>
			<id>development</id>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
			<modules>
				<module>../base/parent</module>
			</modules>
		</profile>
		<profile>
			<id>gui</id>
			<modules>
				<module>../eclipse/parent</module>
			</modules>
		</profile>
		<profile>
			<id>release</id>
			<modules>
				<module>../base/parent</module>
			</modules>
			<build>
				<plugins>
					<plugin>
						<artifactId>maven-assembly-plugin</artifactId>
						<configuration>
							<descriptors>
								<descriptor>src/main/assembly/bin.xml</descriptor>
							</descriptors>
						</configuration>
						<inherited>false</inherited>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>

