<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>pl.edu.agh</groupId>
	<artifactId>samm</artifactId>
	<packaging>pom</packaging>
	<version>0.1-SNAPSHOT</version>
	<name>SAMM</name>
	<description>Autonomic semantic-based management for distributed
		applications</description>
	<url>http://code.google.com/p/sammanager</url>
	<properties>
		<!-- Spring version -->
		<spring.maven.artifact.version>
			2.5.6.A
		</spring.maven.artifact.version>
		<spring.osgi.bundle.version>1.2.0
		</spring.osgi.bundle.version>
		<slf4j.version>1.5.0</slf4j.version>
		<!-- platform versions -->
		<equinox.ver>3.4.2.R34x_v20080826-1230
		</equinox.ver>
		<jena.version>2.5.7</jena.version>
		<weka.version>3.6.1</weka.version>
		<pellet.version>2.0.1</pellet.version>
		<hsqldb.version>1.8.0.10</hsqldb.version>
		<awssdk.version>1.0.005</awssdk.version>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
	</properties>

	<profiles>
		<profile>
			<id>providers</id>
			<modules>
				<module>../providers/parent</module>
			</modules>
		</profile>
		<profile>
			<id>targetplatform</id>

			<modules>
				<module>../base/parent</module>
			</modules>
		</profile>

		<profile>
			<id>development</id>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>

			<modules>
				<module>../base/parent</module>
				<module>../test/parent</module>
			</modules>
		</profile>
		<profile>
			<id>release</id>
			<modules>
				<module>../base/parent</module>
			</modules>
			<build>
				<plugins>
					<plugin>
						<artifactId>maven-assembly-plugin</artifactId>
						<configuration>
							<descriptors>
								<descriptor>src/main/assembly/bin.xml</descriptor>
							</descriptors>
						</configuration>
						<inherited>false</inherited>
					</plugin>
				</plugins>
			</build>
			<dependencies>
				<dependency>
					<groupId>hsqldb</groupId>
					<artifactId>hsqldb</artifactId>
					<version>${hsqldb.version}</version>
					<scope>runtime</scope>
				</dependency>
			</dependencies>
		</profile>
	</profiles>

	<developers>
		<developer>
			<id>pkoperek</id>
			<name>Pawel Koperek</name>
			<email>pkoperek@gmail.com</email>
			<timezone>+1</timezone>
		</developer>
		<developer>
			<id>mkupisz</id>
			<name>Mateusz Kupisz</name>
			<email>mkupisz@gmail.com</email>
			<timezone>+1</timezone>
		</developer>
	</developers>
	<issueManagement>
		<system>Google Code</system>
		<url>http://code.google.com/p/sammanager/issues/</url>
	</issueManagement>
	<ciManagement>
		<system>Hudson</system>
	</ciManagement>
	<scm>
		<connection>scm:svn:http://sammanager.googlecode.com/svn</connection>
		<developerConnection>scm:svn:https://sammanager.googlecode.com/svn/trunk</developerConnection>
		<url>http://code.google.com/p/sammanager/source/browse/</url>
	</scm>
	<distributionManagement>
		<downloadUrl>http://sammanager.ath.cx/</downloadUrl>
		<repository>
			<uniqueVersion>false</uniqueVersion>
			<id>sammanager.ath.cx</id>
			<name>SAMM Stable Repository</name>
			<url>scp://sammanager.ath.cx/srv/http/samm/repo/releases</url>
			<layout>default</layout>
		</repository>
		<snapshotRepository>
			<uniqueVersion>true</uniqueVersion>
			<id>sammanager.ath.cx</id>
			<name>SAMM Snapshots repository</name>
			<url>scp://sammanager.ath.cx/srv/http/samm/repo/snapshots</url>
			<layout>default</layout>
		</snapshotRepository>
		<site>
			<id>sammanager.ath.cx</id>
			<name>SAMM Website</name>
			<url>scp://sammanager.ath.cx/srv/http/samm/site</url>
		</site>
	</distributionManagement>
	<reporting>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-project-info-reports-plugin</artifactId>
				<reportSets>
					<reportSet>
						<reports>
							<report>index</report>
							<!-- These take a lot of time, temporarily disable -->
							<!-- <report>dependencies</report> -->
							<!-- <report>dependency-convergence</report> -->
							<!-- <report>dependency-management</report> -->
							<report>modules</report>
							<report>project-team</report>
							<report>mailing-list</report>
							<report>cim</report>
							<report>issue-tracking</report>
							<report>license</report>
							<report>scm</report>
						</reports>
					</reportSet>
				</reportSets>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-checkstyle-plugin</artifactId>
				<version>2.6</version>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>findbugs-maven-plugin</artifactId>
				<version>2.3.1</version>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jxr-plugin</artifactId>
				<version>2.2</version>
			</plugin>
		</plugins>
	</reporting>
	<build>
		<extensions>
			<!-- This is probably a bug in maven 3.0.0 that wagon has to be explicitly 
				defined in extensions -->
			<extension>
				<groupId>org.apache.maven.wagon</groupId>
				<artifactId>wagon-ssh</artifactId>
				<version>1.0-beta-6</version>
			</extension>
		</extensions>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>1.6</source>
					<target>1.6</target>
				</configuration>
			</plugin>
			<plugin>
				<groupId>com.mycila.maven-license-plugin</groupId>
				<artifactId>maven-license-plugin</artifactId>
				<configuration>
					<header>src/etc/header.txt</header>
					<!-- check in modules -->
					<aggregate>true</aggregate>
					<!-- Force encoding -->
					<encoding>UTF-8</encoding>
					<failIfMissing>true</failIfMissing>
					<strictCheck>true</strictCheck>
				</configuration>
				<executions>
					<execution>
						<goals>
							<goal>check</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-site-plugin</artifactId>
				<version>3.0-beta-3</version>
			</plugin>
		</plugins>
	</build>
	<dependencyManagement>
		<dependencies>
			<dependency>
				<groupId>junit</groupId>
				<artifactId>junit</artifactId>
				<version>4.8.1</version>
				<type>jar</type>
				<scope>test</scope>
			</dependency>
			<dependency>
				<groupId>commons-collections</groupId>
				<artifactId>commons-collections</artifactId>
				<version>3.2.1</version>
			</dependency>
			<dependency>
				<groupId>org.apache.commons</groupId>
				<artifactId>commons-math</artifactId>
				<version>2.1</version>
			</dependency>
			<dependency>
				<groupId>commons-lang</groupId>
				<artifactId>commons-lang</artifactId>
				<version>2.5</version>
			</dependency>
		</dependencies>
	</dependencyManagement>
	<repositories>
		<repository>
			<id>koperek@student</id>
			<name>Repository @ student</name>
			<url>http://student.agh.edu.pl/koperek/maven/</url>
		</repository>
		<repository>
			<id>com.springsource.repository.bundles.release</id>
			<name>SpringSource Enterprise Bundle Repository - SpringSource Bundle
				Releases</name>
			<url>http://repository.springsource.com/maven/bundles/release</url>
		</repository>
		<repository>
			<id>com.springsource.repository.bundles.external</id>
			<name>SpringSource Enterprise Bundle Repository - External Bundle
				Releases</name>
			<url>http://repository.springsource.com/maven/bundles/external</url>
		</repository>
	</repositories>


	<pluginRepositories>
		<pluginRepository>
			<id>maven-repo</id>
			<name>maven repo</name>
			<url>http://repo1.maven.org/maven2/
			</url>
		</pluginRepository>
		<pluginRepository>
			<id>mc-release</id>
			<name>Local Maven repository of releases</name>
			<url>http://mc-repo.googlecode.com/svn/maven2/releases</url>
			<snapshots>
				<enabled>false</enabled>
			</snapshots>
			<releases>
				<enabled>true</enabled>
			</releases>
		</pluginRepository>
	</pluginRepositories>
</project>
