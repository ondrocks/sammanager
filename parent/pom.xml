	<properties>
		<!-- Spring version -->
		<spring.maven.artifact.version>2.5.6.SEC03</spring.maven.artifact.version>
		<spring.osgi.bundle.version>1.2.1</spring.osgi.bundle.version>
		<slf4j.version>1.6.6</slf4j.version>
