<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean
		class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="locations">
			<value>classpath:estimator.properties</value>
		</property>
	</bean>

	<bean id="estimator" class="pl.edu.agh.samm.estimator.Estimator">
		<property name="storageService" ref="storageService" />
		<property name="windowSize" value="${estimator.windowSize}" />
		<property name="algorithm" value="${estimator.algorithm}"></property>
	</bean>

</beans>